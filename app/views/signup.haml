%form.form-horizontal(novalidate=true)
  .alert.alert-error(ng-show="errors")
    .error(ng-repeat="error in errors")
      {{error}}
  %fieldset
    %legend Sign up
    .control-group
      %label.control-label(for="email") Email:
      .controls
        %input#email(type="email" placeholder="Email" ng-model="email" required=true)
    .control-group
      %label.control-label(for="password") Password:
      .controls
        %input#password(type="password" placeholder="Password" ng-model="password" required=true)
    .control-group
      .controls
        %button.btn(type="submit" ng-click="signup()") Sign up!
