%form.form-horizontal(novalidate name="form")
  %fieldset
    %legend Sign up
    .form-group
      %label.control-label(for="email") Email:
      .controls
        %input#email.form-control(type="email"
          name="email"
          placeholder="Email"
          ng-model="ctrl.email"
          required)
    .form-group
      %label.control-label(for="password") Password:
      .controls
        %input#password.form-control(type="password"
          name="password"
          placeholder="Password"
          ng-model="ctrl.password"
          required)
    .form-group
      .controls.offset
        %button.btn.btn-default(type="submit" ng-click="ctrl.signup()"
          ng-disabled="form.$invalid || ctrl.processing") Sign up!
    .form-group
      .controls.offset
        %a(href="#/login") Log in
