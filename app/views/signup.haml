%form.form-horizontal(novalidate=true name="form")
  %fieldset(ng-controller='SignUpCtrl')
    %legend Register
    .alert.alert-error(ng-show="validationError") {{ validationError }}
    .control-group
      %label.control-label(for="email") Email:
      .controls
        %input#email(type="email" name="email" placeholder="Email" ng-model="email" required=true)
    .control-group
      %label.control-label(for="password") Password:
      .controls
        %input#password(type="password" placeholder="Password" ng-model="password" required=true)
    .control-group
      %label.control-label(for="confirmPassword") Confirm Password:
      .controls
        %input#confirmPassword(type="password" placeholder="Confirm Password" ng-model="confirmPassword" required=true)
    .control-group
      .controls
        %button.btn(type="submit" ng-click="register()") Sign up!
