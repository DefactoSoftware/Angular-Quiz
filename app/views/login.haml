%form.form-horizontal(novalidate=true name="form")
  %fieldset
    .alert.alert-error(ng-show="errors")
      .error(ng-repeat="error in errors")
        {{error}}
    %legend Log in
    .control-group
      %label.control-label(for="email") Email:
      .controls
        %input#email(type="email" ng-model="email" placeholder="Email" required=true)
    .control-group
      %label.control-label(for="password") Password:
      .controls
        %input#password(type="password" ng-model="password" placeholder="Password" required=true)
    .control-group
      .controls
        %button.btn(type="submit" data-test="login" ng-click="login()" ng-disabled="processing") Log in
    .control-group
      .controls
        %a(href="#/signup" data-test='signup') Signup
