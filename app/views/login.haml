%form.form-horizontal(novalidate=true)
  %fieldset(ng-controller='LogInCtrl')
    %legend Login
    .control-group
      %label.control-label(for="email") Email:
      .controls
        %input#email(type="email" name="email" placeholder="Email" ng-model="email" required=true)
    .control-group
      %label.control-label(for="password") Password:
      .controls
        %input#password(type="password" placeholder="Password" ng-model="password" required=true)
    .control-group
      .controls
        %button.btn(type="submit" ng-click="login()") Log in
    .control-group
      .controls
        %a(href="#/signup" data-test='signup') Signup


